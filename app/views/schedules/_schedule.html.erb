<% @plan.schedules.each_with_index do |@schedule, i| %>
  <div id="days">
    <div class="plan_day_top">
      <div class="plan_day_name">第<span style="font-size:28px;"><%= i+1 %></span>天</div>
      <div class="plan_day_title"><%= @schedule.name %></div>
      <div style="position:absolute; right:10px; top:20px; line-height:18px;" class="right">
        <div id="day_act_103768">
          <a class="blue" href="/plan/sortable/522555/">排序</a>
          <%= link_to_function '操作', :onclick => "showDayMenu(#{@schedule.object_id});", :class => "blue" %>
          <%= image_tag "/images/icon_ab.gif", :align => "absmiddle" %>
        </div>

        <div id=<%= "day_menu_#{@schedule.object_id}" %> class="hide amenu">
          <%= link_to '编辑', edit_schedule_path(@schedule), :class => "blue" %>
          <a onclick="printDay(103768);" href="javascript:void(0);">打印</a>
          <%= link_to '上移', up_schedule_path(@schedule) %>
          <%= link_to '下移', down_schedule_path(@schedule) %>
          <%= link_to '删除', @schedule, :method => :delete %>
        </div>
      </div>   
    </div>

    <div style="line-height:26px; background:#F5F5F5; border-bottom:#CCCCCC 1px solid; color:#676767;" id="day_header_103768">
      &nbsp;&nbsp;日期：<%= @schedule.plan_date.to_s %>&nbsp;&nbsp;<%= day_to_week @schedule.plan_date.wday.to_s %>
    预算：<span class="o b currency">¥</span>
    <span class="o b" id="day_costs_header_103768"></span>
  </div>

  <%= render 'journeys/journey' %>
<% end %>
