<form method="post" name="frmAdd" id="frmAdd">
  <ul class="uf_add_activity">
    <li>
      <span> 标题：</span>
      <div><input type="text" style="width:180px;" value="" id="title" name="title"><b class="o">*</b></div>
    </li>

    <li>
      <span> 说明：</span>
      <div><textarea onblur="this.style.height='60px';this.style.position='relative';this.style.width='180px';$('#times').show();" onfocus="$('#times').hide();this.style.height='120px';this.style.position='absolute';this.style.width='320px';" style="width:180px; height:60px; z-index:999;" id="description" name="description"></textarea></div>
    </li>

    <li>
      <span> 时间：</span>
      <div id="times">
        <input type="text" style=" width:50px;margin-right:5px;" value="" id="starts" name="starts">～<input type="text" style="width:50px;margin-left:5px;" value="" id="ends" name="ends">如：08:22~12:30</div>
    </li>

    <li>
      <span> 预算：</span>
      <div><input type="text" style="width:50px;" value="" id="costs" name="costs">人均预算(RMB)</div>
    </li>

    <li>
      <span></span>
      <div>
        <input type="button" onclick="activity.save();" onmouseover="this.className='btn btn_def_hv'" onmouseout="this.className='btn btn_def'" class="btn btn_def" value="保存" name="button">
        <input type="button" onclick="activity.cancel();" onmouseover="this.className='btn btn_gray_hv'" onmouseout="this.className='btn btn_gray'" class="btn btn_gray" value="返回" name="button">
      </div>
    </li>
  </ul>
  <input type="hidden" value="103644" id="dayid" name="dayid">
  <input type="hidden" value="" id="linktype" name="linktype">
  <input type="hidden" value="" id="linkid" name="linkid">
</form>
