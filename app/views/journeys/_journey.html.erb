<ul class="activity_list">
  <% if @schedule.journeys != [] %>
    <% @schedule.ordered_journeys.each do |journey| %>
      <li class="li_activity" id="activity_<%= journey.id %>" key="<%= journey.id %>" style="clear:both; border-bottom:#efefef 1px solid;  height:auto;">
        <div style="padding:3px 0;" id="activity_show_<%= journey.id %>">
          <div style="text-align:center;width:100px;font-size:16px; color:#555;font-family:'微软雅黑','黑体'; overflow:hidden;" class="left">
            <br>
          </div>        
          <div class="left">  
            <div style="width:20px; text-align:center; margin-top:6px;" class="left">
            </div>            
            <div style="width:350px; text-align:left;" class="left">
              <div style="font-size:20px; color:#181818;font-family:'微软雅黑';">
                <%= link_to journey.name, "", :target => "_blank", :class => "blue", :style => "font-family:'微软雅黑';" %>
              </div>
              <div style="color:#999999;"><%= journey.description %><br>
              </div>
              <div style="margin-top:10px;">
                <a rel="group" onclick="return false;" title="图片：" style="width:106px;" target="_blank" class="scenic_logo zoom" href="http://d.lvren.cn/lvyou/chuxiong/ailaoshan"><img width="100" height="70" src="http://5.pic.lvren.cn/scenic/100_70/20110401/23059846_cDZhE8.jpg"></a>
              </div>
            </div>
          </div>
          <div style="width:50px; text-align:right; padding:10px 10px 0 0; color:#999999;" class="right">
            -
          </div>
          <div style="width:150px; text-align:left; padding:10px 10px 0 0; color:#999999;" class="right">
        <% if current_user != nil && current_user.id == @plan.user_id %>
            <div id="activity_act_<%= journey.id %>">
              <%= link_to_function '上移', "plan.moveActivityUp(#{journey.id})" %>
              <%= link_to_function '下移', "plan.moveActivityDown(#{journey.id})" %>
              &nbsp;<a style="color:#999999;" onclick="plan.showActivityMenu(<%= journey.id %>);" href="javascript:void(0);">操作<img align="absmiddle" src="/images/icon_ab.gif"></a>
              &nbsp;<a style="color:#999999;" onclick="plan.showMoveMenu(<%= journey.id %>);" href="javascript:void(0);">移至<img align="absmiddle" src="/images/icon_ab.gif"></a>
            </div>
            <div style="margin-left:60px;" id="activity_menu_<%= journey.id %>" class="hide amenu">
              <a onclick="plan.showActivityEdit(<%= journey.id %>);" href="javascript:void(0);">编辑</a>
              <a onclick="plan.uploadImage(<%= journey.id %>);" href="javascript:void(0);">上传附图</a>
              <%= link_to '删除', journey, :confirm => '确定删除此条目吗？',:remote => true, :method => :delete %>
            </div>
            <div style="margin-left:100px;" id="move_menu_<%= journey.id %>" class="hide amenu">
              <a onclick="plan.moveSelectDay('103645','103644','1','100531514');" href="javascript:void(0);">移至第1天</a>
              <a onclick="plan.moveSelectDay('103645','103645','2','100531514');" href="javascript:void(0);">移至第2天</a>
              <a onclick="plan.moveSelectDay('103645','103651','3','100531514');" href="javascript:void(0);">移至第3天</a>
            </div>
            <div class="hide" id="activity_status_<%= journey.id %>">
              <img align="absmiddle" src="/images/loading.16.gif">
            </div>
          </div>
        <% end %>
          <div class="clear"></div>
        </div><!-- //show -->
        <div style="background:#F2FFCA" class="hide" id="activity_edit_<%= journey.id %>">
        </div>
        <div style="height:0;" class="clear"><img height="1" src=""></div>
      </li>
    <% end %>
    <li style="clear:both; border-bottom:#EFEFEF 1px solid; padding:3px 0;">
      <div style="margin-left:50px;width:400px; text-align:center; margin-top:10px;" class="left">
      </div>
      <div style="width:100px; text-align:right; padding:10px 10px 0 0; color:#999999;" class="right o currency">
        本日预算：<span class="o b currency">¥</span><span class="o b" id="day_costs_<%= @schedule.id %>"><%= schedule_costs @schedule %></span>
      </div>
      <div style="height:2px;" class="clear"><img height="1" src=""></div>
    </li>
  <% else %>
    <li style="clear:both; border-bottom:#EFEFEF 1px solid; padding:3px 0;">
      <div style="margin-left:50px;width:400px; text-align:center; margin-top:10px;" class="left">
        <span style="color:#878787;">请点击“添加行程”按钮将城市、景点、酒点、航班、列车等加入行程安排</span>
      </div>
    </li>
  <% end %>
</ul> 
